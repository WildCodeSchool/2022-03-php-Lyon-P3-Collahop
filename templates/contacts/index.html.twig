{% extends 'base.html.twig' %}

{% block title %}
	Contacts
{% endblock %}

{% block body %}

	<div class=" contacts container-fluid">
		<div class="row">
            <div class="contact_img col-xl-7">
                <img
			    class="contacts_img img-fluid m-0 p-0" src="{{ asset('build/images/contacts_img/contacts_form_bg.jpg') }}" alt="Réunion de travail">
            </div>
			<div class="form-body form-group col-xl-5 p-xl-3">
				<h1 class="contact-form-title d-flex justify-content-center fs-xs-5 mt-3 py-2 fs-xl-1 mb-xl-4 ">Formulaire de contact</h1>
                <div class ="row">
				{{ form_start(form,  {
                    'attr' : {
                        'class' : 'inputs_groups px-5'
                    }
                }) 
                }}

				{{ form_row(form.firstname, {
                    'label':false,
                    'attr': {
                        'placeholder' : 'Prénom',
                        'class' : 'contact_form_input py-3',
                        }
                    }) 
                }}

				{{ form_row(form.lastname, {
                    'label':false,
                    'attr': {
                        'placeholder' : 'Nom',
                        'class' : 'contact_form_input mb-xl-2'
                        }
                    }) 
                }}

				{{ form_row(form.email, {
                    'label':false,
                    'attr': {
                        'placeholder' : 'Adresse e-mail',
                        'class' : 'contact_form_input contact_form_mail'
                        }
                    }) 
                }}

				{{ form_row(form.company, {
                    'label':false,
                    'attr': {
                        'placeholder' : 'Société',
                        'class' : 'contact_form_input'
                        }
                    }) 
                }}

				{{ form_row(form.message, {
                    'label':false,
                    'attr': {
                        'placeholder' : 'Votre message',
                        'class' : 'contact_form_area', 
                        'rows' : 8
                        }
                    }) 
                }}

				{{ form_row(form.send, {
                    'label' : 'Envoyer',
                    'attr': {
                        'class' : 'contact_form_btn btn fs-4 mt-3', 
                        }
                    }) 
                }}
				{{ form_end(form) }}
                </div>
			</div>
		</div>
	</div>
{% endblock %}
