{% extends 'base.html.twig' %}

{% block body %}

	<body class="body_login">

		<header>
			{% include ('_navbar.html.twig') %}
		</header>

		{% include "home/partials/_sidebar_user.html.twig" %}

		<div class="body_div_login">
			<div class="frame_login">
				<div class="left_frame">
					<form action="{{ path('login') }}" method="post" class="form">
						<h2 class="">Connexion</h2>

						<div class="id_form_login">
							<label class="form_label" for="username">Identifiant :</label>
							<input type="email" id="username" class="identification" name="_username" value="{{ last_username }}" placeholder="Email" required/>
						</div>

						<div class="pass_form_login">
							<label class="form_label" for="password">Mot de passe :</label>
							<input type="password" id="password" class="password" name="_password" placeholder="Mot de passe" required/>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<button class="button" type="submit">Connexion</button>
					</form>
				</div>
				<div class="right_frame">
					{% if error %}
						<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
				</div>
			</div>
		</div>

	</body>
	
{% endblock %}
