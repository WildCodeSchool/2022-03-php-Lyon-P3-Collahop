{% extends 'base.html.twig' %}

{% block title %}Admin - Messages
{% endblock %}

{% block body %}
	<body class="message_admin_body">
		{% include "admin/partials/_sidebar_admin.html.twig" %}

		<section class="message_admin_section">
		<h1 class="text-center m-5"> Vos messages </h1>
			<table class="table text-center">
				<thead>
					<tr>
						<th scope="col">
							Nom
						</th>
						<th scope="col">
							Pr√©nom
						</th>
						<th scope="col">
							Entreprise
						</th>
						<th scope="col">
							Adresse email
						</th>
						<th scope="col">
							Date
						</th>
						<th scope="col">
							Message
						</th>
						<th scope="col">
							Supprimer
						</th>
					</tr>
				</thead>
				<tbody>
					{% for message in messages %}
						<tr class="admin_messages_content">
							<td>
								{{ message.lastname }}
							</td>

							<td>
								{{ message.firstname }}
							</td>

							<td>
								{{ message.company }}
							</td>

							<td>
								{{ message.email }}
							</td>

							<td>
								{{ message.createdAt|date('d-m-y H:i:s', 'Europe/Paris') }}
							</td>

							<td>
								<a href="/admin/messages/show/{{message.id}}" class="messages_link_btn">
									<button class="show_messages_btn">
										Afficher
									</button>
								</a>
							</td>

							<td>
								<span class="data_list">
									<a href="/admin/messages/delete/{{message.id}}">
										<i class="fa-solid fa-circle-xmark delete_btn_icn"></i>
									</a>
								</span>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</table>
		</section>

	</body>

{% endblock %}